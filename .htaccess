Options -Indexes
RewriteEngine on

# ---- استثنا کردن hitest.php ----
RewriteRule ^hitest\.php$ - [L]

# ---- قوانین اصلی ----
RewriteCond %{REQUEST_URI} !^public
RewriteRule ^(.*)$ public/$1 [L]

<Files .env>
order allow,deny
Deny from all
</Files>

<Files .htaccess>
order allow,deny
Deny from all
</Files>

<Files "hitest.php">
    Require all granted
</Files>
